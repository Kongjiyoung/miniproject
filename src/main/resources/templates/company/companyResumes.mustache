{{> layout/header}}
<div class="container d-flex" style="height: 100vh;">
<!-- 이거 화면 이상하면 위에 100vh 지워보세요. -->
    <section class="container grid-gap: 50px; mt-5">
        <h1>00에 도착한 이력서를 검토해보세요</h1>
        <br>

        <!-- 유형별 공고 탭 끝 -->
        <br>
        <ul class="row row-cols-4 gap-3">
                {{#resumeSkillList}}
                    <li class="card col" style="width: 15rem; padding: 0px !important; border: 0">
                        <div class="form-check d-flex justify-content-center">
                            <input class="form-check-input" type="radio" name="flexRadioDefault" id="flexRadioDefault1"
                                   checked required>
                            <label class="form-check-label" for="flexRadioDefault1"></label>
                        </div>
                        <a href="/company/resume/{{id}}/detail" style="text-decoration: none; color: black">
                            <div style="width: 100%; height: 15rem; overflow: hidden">
                                <img src="/images/person01.png" class="card-img-top" alt="이력서 사진"/>
                            </div>
                            <div class="card-body">
                                <h5 class="card-title" style="
                            display: -webkit-box;
                            -webkit-line-clamp: 1;
                            -webkit-box-orient: vertical;
                            overflow: hidden;
                            text-overflow: ellipsis;
                          "><b>{{title}}</b></h5>
                                <h6><span>커리어</span>|<span>{{career}}</span></h6>
                                <p class="card-text" style="
                          display: -webkit-box;
                          -webkit-line-clamp: 2;
                          -webkit-box-orient: vertical;
                          overflow: hidden;
                          text-overflow: ellipsis;
                        ">
                                    {{simpleIntroduce}}
                                </p>
                                <!-- 버튼 구림 -->
                                <div class="d-flex justify-content-start" style="
                          display: -webkit-box;
                          -webkit-line-clamp: 1;
                          -webkit-box-orient: vertical;
                          overflow: hidden;
                          text-overflow: ellipsis;
                        ">
                                    <h6><span>{{#skills}}
                                        <button class="btn btn-outline-warning btn-sm disabled">
                                            {{.}}
                                        </button>{{/skills}}</span></h6>
                                </div>
                            </div>
                        </a>
                        <div class="d-flex justify-content-center">
                            <a href="/company/resume/{{id}}/detail" class="btn btn-outline-success mb-3" style="width: 100%">{{isPass}}</a>
                        </div>
                    </li>
                {{/resumeSkillList}}
            </li>

        </ul>
        <div class="container mt-5 mb-5">
            <nav aria-label="Page navigation">
                <ul class="pagination justify-content-center">
                    <li class="page-item disabled">
                        <a class="page-link" href="#" tabindex="-1">이전</a>
                    </li>
                    <li class="page-item active">
                        <a class="page-link" href="#">1</a>
                    </li>
                    <li class="page-item">
                        <a class="page-link" href="#">2</a>
                    </li>
                    <li class="page-item">
                        <a class="page-link" href="#">3</a>
                    </li>
                    <li class="page-item">
                        <a class="page-link" href="#">다음</a>
                    </li>
                </ul>
            </nav>
        </div>
        <!-- 페이지네이션 -->
    </section>

    <!-- list-group( 오른쪽 바로가기) 시작 -->
    <div class="list-group mx-2">
        <a href="/company/info" class="list-group-item shadow " style="width: 180px;">회사 정보 관리</a>
        <a href="/company/post" class="list-group-item shadow">공고 관리</a>
        <a href="/company/resume" class="list-group-item hs_list_effect shadow">받은 이력서</a>
        <a href="/company/scrap" class="list-group-item shadow">스크랩한 이력서</a>
        <a href="/company/offers" class="list-group-item shadow">제안한 이력서</a>
    </div>
    <!-- list-group( 오른쪽 바로가기) 끝 -->
</div>
{{> layout/footer}}