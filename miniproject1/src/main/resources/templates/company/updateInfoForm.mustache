                <div>
                    <!-- MIME 타입: multipart/form-data 파일이나 이미지 업로드 시 사용
                     -->
                    <form action="/company/info/{{id}}/update" method="post" id="companyUpdate" enctype="multipart/form-data">
                        <div class="container w-50 mt-5 text ">
                            <div class="input-group mb-3">
                                <input type="file" class="form-control" value="" id="" name="">
                            </div>
                            <div class="input-group mb-3">
                                <span class="input-group-text  justify-content-center hs_span_size init_color hs_span">회사명</span>
                                <input type="text" class="form-control" value="네이버(주)" name="companyName" readonly>
                            </div>
                            <div class="input-group mb-3">
                                <span class="input-group-text justify-content-center hs_span_size init_color hs_span">대표자</span>
                                <input type="text" class="form-control" value="최수연" id="" name="">
                            </div>
                            <div class="input-group mb-3">
                                <span class="input-group-text  justify-content-center hs_span_size init_color hs_span">사업자번호</span>
                                <input type="text" class="form-control" value="220-81-62517" name="" maxlength="10" readonly>
                            </div>

                            <div class="input-group mb-3">
                                <span class="input-group-text justify-content-center hs_span_size init_color hs_span">설립년도</span>
                                <input type="date" class="form-control" id="1999. 06. 02." name="year">
                            </div>

                            <div class="input-group mb-3">
                                <span class="input-group-text justify-content-center hs_span_size init_color hs_span">주소</span>
                                <input type="text" class="form-control" value="경기도 성남시 분당구 정자일로 95 (우)13561" id="" name="">
                            </div>
                            <div class="input-group mb-3">
                                <span class="input-group-text justify-content-center hs_span_size init_color hs_span">사원수</span>
                                <input type="text" class="form-control" value="4,189명" id="" name="">
                            </div>

                            <div class="mt-5">
                                <h4 class="border-bottom pb-4">담당자 정보</h4>

                            </div>
                            <br>
                            <div class="input-group mb-3">
                                <span class="input-group-text  justify-content-center hs_span_size init_color hs_span">이름</span>
                                <input type="text" class="form-control" value="성시경" id="" name="">
                            </div>
                            <div class="input-group mb-3">
                                <span class="input-group-text  justify-content-center hs_span_size init_color hs_span">연락처</span>
                                <input type="text" class="form-control" value="010-1234-5678" id="" name="">
                            </div>
                            <div class="input-group mb-3">
                                <span class="input-group-text  justify-content-center hs_span_size init_color">이메일</span>
                                <input type="text" class="form-control" value="moda@naver.com" name="">
                            </div>

                            <div class="input-group mb-3">
                                <span class="input-group-text  justify-content-center hs_span_size init_color">비밀번호</span>
                                <input type="password" class="form-control" value="" id="" name="">
                            </div>
                            <div class="input-group mb-3">
                                <span class="input-group-text  justify-content-center hs_span_size init_color">비밀번호
                                    확인</span>
                                <input type="password" class="form-control"  id="">
                            </div>

                            <div id="checkAlertBox"></div>

                            <div class="d-flex justify-content-center mt-5" style="width: 100%;">
                                <div style="width: 100%;">
                                    <button type="submit" class="btn btn-outline-success mb-3"
                                            style="width: 100%">수정완료
                                    </button>
                                </div>
                                <div class="d-flex justify-content-center" style="width: 100%">
                                    <a href="/company/info/{{id}}" class="btn btn-outline-danger mb-3"
                                       style="width: 100%">취소</a>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
